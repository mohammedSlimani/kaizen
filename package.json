{
  "name": "kaizen",
  "description": "Get better everyday",
  "version": "0.0.0",
  "homepage": "",
  "private": true,
  "main": "electron/main.js",
  "keywords": [
    "feathers"
  ],
  "author": {
    "name": "mohammed",
    "email": "slimani.med.21@gmail.com"
  },
  "contributors": [],
  "bugs": {},
  "engines": {
    "node": "^14.17.3",
    "yarn": ">= 0.18.0"
  },
  "scripts": {
    "install-all": "yarn --cwd ./ui install && yarn install",
    "lint": "eslint server/* test/* electron/* --config .eslintrc.json --fix",
    "mocha": "cross-env NODE_ENV=test mocha --require test/setup/setup.js --recursive --exit test/",
    "test": "yarn lint && yarn mocha",
    "electron-start": "electron .",
    "ui-start": "cross-env BROWSER=none yarn --cwd ./ui start",
    "start": "concurrently \"yarn ui-start\" \"wait-on http://localhost:3000 && yarn electron-start\"",
    "release": "electron-builder"
  },
  "build": {
    "appId": "com.kaizen.app",
    "directories": {
      "output": "packaged"
    },
    "mac": {
      "icon": "assets/logo.png"
    },
    "win": {
      "icon": "assets/logo.png"
    },
    "linux": {
      "icon": "assets/logo.png",
      "category": "productivity"
    }
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "ignore": []
  },
  "dependencies": {
    "@feathersjs/configuration": "^4.5.9",
    "@feathersjs/errors": "^4.5.9",
    "@feathersjs/express": "^4.5.9",
    "@feathersjs/feathers": "^4.5.9",
    "@feathersjs/transport-commons": "^4.5.11",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "electron-is-dev": "^2.0.0",
    "feathers-sequelize": "^6.2.0",
    "helmet": "^4.2.0",
    "sequelize": "^6.3.5",
    "serve-favicon": "^2.5.0",
    "sqlite3": "^5.0.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "axios": "^0.21.1",
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "eslint": "^7.13.0",
    "faker": "^5.5.3",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "wait-on": "^6.0.0"
  }
}
